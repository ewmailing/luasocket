<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.playcontrol.almixer.testapp.MainActivity">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Hello World, HelloAndroidALmixer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert_button" />

    <Button
        android:id="@+id/alert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="myClickHandler"
        android:text="@string/alert_press"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"></Button>

    <Button
        android:id="@+id/beep_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="myClickHandler"
        android:text="@string/beep_press"
        app:layout_constraintStart_toEndOf="@+id/alert_button"
        tools:layout_editor_absoluteY="16dp"></Button>

</android.support.constraint.ConstraintLayout>



